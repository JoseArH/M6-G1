nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    a.navbar-brand(href='/admin') Admin Panel
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(href='/admin') Inicio
        li.nav-item
          a.nav-link(href='/productos') Productos
        li.nav-item
          a.nav-link(href='/categorias') Categorías
        li.nav-item
          a.nav-link(href='/usuarios') Usuarios
      ul.navbar-nav.ms-auto
        if user
          li.nav-item
            span.nav-link Bienvenido, #{user.nombre}
          li.nav-item
            a.btn.btn-danger.ml-2(href="/auth/logout") Cerrar Sesión
        else
          li.nav-item
            a.btn.btn-primary(href="/auth/login") Iniciar Sesión
          li.nav-item
            a.btn.btn-success.ml-2(href="/auth/registro") Registro
