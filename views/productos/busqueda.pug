                //Tarjetas con las coincidencias de búsqueda
                if productos && productos.length > 0
                    .mt-4
                        .row
                            each producto in productos
                                .col-md-4.mb-3
                                    .card
                                        .card-body
                                            h4.card-title= producto.nombre
                                            p.card-text Descripción: #{producto.descripcion}
                                            p.card-text Precio: $#{producto.precio}
                                            p.card-text Categoría: #{producto.categoria}
                else if terminoBusqueda
                    .alert.alert-info No se encontraron productos que coincidan con la búsqueda

