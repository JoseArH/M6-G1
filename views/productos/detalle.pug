extends ../layouts/admin-layout

block content
    .container
      .row.mt-5
        .col-md-8.offset-md-2
          .card
            .card-body
              h1.card-title #{producto.nombre}
              p.card-text.lead #{producto.descripcion}

              // Mostrar imagen del producto si est√° disponible
              if producto.imagen
                .text-center.mb-4
                  img(src=producto.imagen alt=`Imagen de ${producto.nombre}` class="img-fluid rounded" style="max-height: 300px;")
              else
                .alert.alert-info.text-center No hay imagen disponible para este producto

              hr

              .row
                .col-md-6
                  p.font-weight-bold Precio: 
                  span.badge.badge-success #{producto.precio} $
                .col-md-6
                  p.font-weight-bold Inventario: 
                  span.badge.badge-info #{producto.inventario}

              hr

              .row.mt-3
                .col
                  a.btn.btn-secondary(href="/productos") Volver a la lista de productos

              .row.mt-3
                .col-md-6
                  // Formulario para eliminar producto
                  form(action=`/productos/${producto.id}/eliminar` method="POST").p-0
                    button.btn.btn-danger(type="submit") Eliminar Producto

                .col-md-6
                  // Formulario para actualizar producto
                  a.btn.btn-primary(href=`/productos/${producto.id}/editar` method="POST") Actualizar Producto
