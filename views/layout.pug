doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{titulo} | La tiendita
    // Bootstrap 5 CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    // Font Awesome 6
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet")
    link(rel="stylesheet", href="/css/styles.css")
    block styles
  
  body.d-flex.flex-column.min-vh-100
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.fixed-top
      .container
        a.navbar-brand(href="/") La tiendita
        .ms-auto
          if user
            .d-flex.align-items-center
              a.btn.btn-outline-primary.me-2(href="/carrito")
                i.fas.fa-shopping-cart.me-2
                span Carrito
              .dropdown
                button.btn.btn-light.dropdown-toggle(data-bs-toggle="dropdown")
                  i.fas.fa-user.me-2
                  span #{user.email}
                ul.dropdown-menu.dropdown-menu-end
                  li
                    a.dropdown-item(href="/perfil")
                      i.fas.fa-user-circle.me-2
                      | Mi Perfil
                  li
                    a.dropdown-item(href="/pedidos")
                      i.fas.fa-box.me-2
                      | Mis Pedidos
                  li.dropdown-divider
                  li
                    a.dropdown-item.text-danger(href="/auth/logout")
                      i.fas.fa-sign-out-alt.me-2
                      | Cerrar Sesión
          else
            a.btn.btn-outline-secondary.me-2(href="/auth/login") Iniciar Sesión
            a.btn.btn-primary(href="/auth/registro") Registro

    main.flex-grow-1.mt-5.pt-4
      block content

    footer.bg-dark.text-light.py-4.mt-5
      .container
        .row
          .col-md-4
            h5.mb-3 La tiendita
            p.small Dinero dinero dinero aprende algo dinero
          .col-md-4
            h5.mb-3 Enlaces rápidos
            ul.list-unstyled
              li: a.text-light(href="/") Inicio
              li: a.text-light(href="/productos") Productos
              li: a.text-light(href="/contacto") Contacto
          .col-md-4
            h5.mb-3 Contacto
            ul.list-unstyled.small
              li
                i.fas.fa-envelope.me-2
                | supercoolcorreo@latiendita.cl
              li
                i.fas.fa-phone.me-2
                | (+56) 945678980

    // Bootstrap 5 Bundle with Popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    block scripts
